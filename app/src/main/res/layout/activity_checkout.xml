<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/border3"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_arrow_back_black_24dp"></ImageView>

            <TextView
                android:textSize="25sp"
                android:textColor="#FFF"
                android:text="chekout"
                android:layout_width="190dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"></TextView>
            <ImageView
                android:onClick="home"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_home_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:background="@drawable/border3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    >
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:paddingTop="1dp"
                        android:textColor="#FFF"
                        android:text="Alamat pengirim"
                        android:layout_width="200dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginLeft="-200dp"
                        android:layout_marginTop="40dp"
                        android:textSize="15sp"
                        android:paddingTop="1dp"
                        android:textColor="#FFF"
                        android:text="@string/alamat"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>
                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:background="@drawable/border3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <ImageView
                        android:background="@drawable/mandau"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="130dp"
                        android:layout_height="130dp"></ImageView>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:paddingTop="1dp"
                        android:text="Mandau Terbang"
                        android:layout_width="200dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginLeft="-200dp"
                        android:layout_marginTop="40dp"
                        android:textSize="20sp"
                        android:paddingTop="1dp"
                        android:text="Rp.500.000,00"
                        android:layout_width="200dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginLeft="-200dp"
                        android:layout_marginTop="70dp"
                        android:text=" terjual 127"
                        android:layout_width="100dp"
                        android:layout_height="30dp"></TextView>

                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:background="@drawable/border3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:paddingTop="1dp"
                        android:text="Opsi pengiriman"
                        android:layout_width="200dp"
                        android:layout_height="30dp"></TextView>

                    <RadioGroup
                        android:layout_marginLeft="-100dp"
                        android:layout_marginTop="50dp"
                        android:id="@+id/pengiriman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton

                            android:id="@+id/rb_jne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Jne  Rp.25.000 " >

                        </RadioButton>

                        <RadioButton
                            android:layout_marginTop="15dp"
                            android:id="@+id/rb_express"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EXpress   Rp.35.000" />

                        <RadioButton
                            android:id="@+id/rb_jnt"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JandT Express   Rp.40.000" ></RadioButton>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:background="@drawable/border3"
                    android:layout_width="match_parent"
                    android:layout_height="165dp">


                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:paddingTop="1dp"
                        android:text="Opsi Pembayaran"
                        android:layout_width="200dp"
                        android:layout_height="30dp"></TextView>

                    <RadioGroup
                        android:layout_marginLeft="-200dp"
                        android:layout_marginTop="50dp"
                        android:id="@+id/pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ovo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Ovo Pay " >

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/bri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Bri" />

                        <RadioButton
                            android:id="@+id/mandiri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Mandiri" ></RadioButton>

                        <RadioButton
                            android:id="@+id/lainya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Lainnya" ></RadioButton>
                    </RadioGroup>
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:paddingTop="1dp"
                        android:text="Subtotal produk : "
                        android:layout_width="120dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginTop="-34dp"
                        android:layout_marginLeft="200dp"
                        android:background="@drawable/border2"
                        android:layout_width="160dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:paddingTop="1dp"
                        android:text="Subtotal Pengiriman : "
                        android:layout_width="170dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginTop="-34dp"
                        android:layout_marginLeft="200dp"
                        android:background="@drawable/border2"
                        android:layout_width="160dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:paddingTop="1dp"
                        android:text="Total Pembayaran : "
                        android:layout_width="170dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginTop="-34dp"
                        android:layout_marginLeft="200dp"
                        android:background="@drawable/border2"
                        android:layout_width="160dp"
                        android:layout_height="30dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:background="#FF9800"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:onClick="kodePem"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="Buat pesanan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"></TextView>



                </LinearLayout>




            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</RelativeLayout>