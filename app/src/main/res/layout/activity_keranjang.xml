<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".keranjang">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#FF494949"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_arrow_back_black_24dp"></ImageView>

            <TextView
                android:textSize="25sp"
                android:textColor="#FFF"
                android:text="Keranjang saya"
                android:layout_width="190dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"></TextView>
            <ImageView
                android:onClick="home"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_home_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:background="#FF494949"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <ImageView
                        android:background="@drawable/barongan"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="130dp"
                        android:layout_height="130dp"></ImageView>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:paddingTop="1dp"
                        android:textColor="#FFF"
                        android:text="Barongan khas bali"
                        android:layout_width="200dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginLeft="-200dp"
                        android:layout_marginTop="40dp"
                        android:textSize="20sp"
                        android:paddingTop="1dp"
                        android:textColor="#FFF"
                        android:text="Rp.900.000,00"
                        android:layout_width="200dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginLeft="-200dp"
                        android:layout_marginTop="70dp"
                        android:textColor="#FFF"
                        android:text=" terjual 127"
                        android:layout_width="100dp"
                        android:layout_height="30dp"></TextView>

                    <Button
                        android:onClick="cekout"
                        android:textColor="#000"
                        android:text="chekout"
                        android:layout_marginLeft="-100dp"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/border"
                        android:layout_width="70dp"
                        android:layout_height="30dp"></Button>

                    <Button
                        android:textColor="#000"
                        android:text="hapus"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/border"
                        android:layout_width="70dp"
                        android:layout_height="30dp"></Button>

                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:background="#FF494949"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <ImageView
                        android:background="@drawable/mandau"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="130dp"
                        android:layout_height="130dp"></ImageView>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:paddingTop="1dp"
                        android:textColor="#FFF"
                        android:text="Mandau Terbang"
                        android:layout_width="200dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginLeft="-200dp"
                        android:layout_marginTop="40dp"
                        android:textSize="20sp"
                        android:paddingTop="1dp"
                        android:textColor="#FFF"
                        android:text="Rp.500.000,00"
                        android:layout_width="200dp"
                        android:layout_height="30dp"></TextView>

                    <TextView
                        android:layout_marginLeft="-200dp"
                        android:layout_marginTop="70dp"

                        android:text=" terjual 127"
                        android:layout_width="100dp"
                        android:layout_height="30dp"></TextView>

                    <Button
                        android:textColor="#000"
                        android:text="chekout"
                        android:layout_marginLeft="-100dp"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/border"
                        android:layout_width="70dp"
                        android:layout_height="30dp"></Button>

                    <Button
                        android:textColor="#000"
                        android:text="hapus"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/border"
                        android:layout_width="70dp"
                        android:layout_height="30dp"></Button>
                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</RelativeLayout>