<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kodeBayar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/border3"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_arrow_back_black_24dp"></ImageView>

            <TextView
                android:textSize="25sp"
                android:text="Tagihan"
                android:layout_width="190dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"></TextView>
            <ImageView
                android:onClick="home"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_home_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/border4"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="Tagihan anda"
                android:layout_width="150dp"
                android:layout_height="30dp"></TextView>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@drawable/border3"
                android:layout_marginTop="20dp"
                android:layout_width="390dp"
                android:layout_height="160dp">

                <ImageView
                    android:background="@drawable/bri"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"></ImageView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:text="Bank Bri virtual account"
                    android:layout_width="160dp"
                    android:layout_height="20dp"></TextView>

                <EditText
                    android:background="@drawable/border2"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="-160dp"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_width="160dp"
                    android:layout_height="30dp"></EditText>

                <TextView
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="-160dp"
                    android:textSize="15sp"
                    android:text="Total bayar"
                    android:layout_width="160dp"
                    android:layout_height="20dp"></TextView>
                <TextView
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="-160dp"
                    android:textSize="15sp"
                    android:text="Rp.1.000.000"
                    android:layout_width="160dp"
                    android:layout_height="20dp"></TextView>




            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/border3"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="Cara pembayaran"
                android:layout_width="160dp"
                android:layout_height="30dp"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:text="@string/virtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>








        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>