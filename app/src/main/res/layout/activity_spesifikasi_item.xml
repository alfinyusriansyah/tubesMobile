<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spesifikasi_item">

    <ScrollView
        android:layout_width="422dp"
        android:layout_height="741dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:background="@drawable/border4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.102"
                android:background="@drawable/barongan" />

            <TextView
                android:textColor="#fff"
                android:paddingLeft="10sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Barongan khas bali"
                android:textSize="28sp"></TextView>
            <TextView
                android:textColor="#fff"
                android:paddingLeft="10sp"
                android:layout_marginTop="3dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.900.000,00"></TextView>
            <TextView
                android:paddingLeft="10sp"
                android:layout_marginTop="3dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="127 Terjual"></TextView>

            <LinearLayout
                android:background="@drawable/border4"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/sanggar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"></ImageView>
                <TextView
                    android:textColor="#fff"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="145sp"
                    android:layout_height="20sp"
                    android:text="Kerajian Nusantara.id"></TextView>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/border"
                    android:layout_width="90dp"
                    android:layout_height="30sp"
                    android:text="Kunjungi"
                    android:textSize="17sp"
                    android:textColor="#000"></TextView>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#fff"
                    android:paddingLeft="155dp"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Deskripsi"></TextView>
                <TextView
                    android:paddingLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="berasal dari Randu, kayu Dadap, kayu Gempol dan kayu Mangga.">
                </TextView>
                <TextView
                    android:background="@drawable/border4"
                    android:paddingLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/paragraph">
                </TextView>

                <TextView
                    android:background="@drawable/border4"
                    android:paddingLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/paragraph">
                </TextView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/ic_chat_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"></LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/ic_add_shopping_cart_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"></LinearLayout>

                    <TextView

                        android:background="@drawable/border"
                        android:paddingTop="2dp"
                        android:paddingLeft="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="89dp"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Beli"
                        android:textColor="#000"
                        android:textSize="35sp"></TextView>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</RelativeLayout>